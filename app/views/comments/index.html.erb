<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<% if @comments.empty? %>
  <p> There are currently no comments </p>
<% end %>

<h1>Article: <%= @article.title %></h1>

<% @comments.each do |comment| %>
  <h4> Commenter: <%= comment.commenter %> </h4>
  <p> <%= comment.body %> </p>
  <%= link_to "Edit", edit_article_comment_path(@article, comment) %>
  <%= link_to "Delete", [comment.article, comment], data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure you want to delete this comment?" }
  %>
  <%= link_to "Inspect", article_comment_path(@article, comment) %>
<% end %>

<br> <br>
<%= link_to "Article", article_path(@article) %>
<%= link_to "Home", root_path %>
